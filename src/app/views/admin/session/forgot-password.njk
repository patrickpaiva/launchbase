{% extends "admin/session/layout.njk" %}

{% block head %}
    <title>Foodfy - Esqueci minha senha</title>
    <link rel="stylesheet" href="/userStyle.css">
{% endblock %}

{% block content %}
<main>
    <form action="/users/forgot-password" class="card-form login forgot-password" method="POST">
        <div class="login-title">
            <h3>Esqueceu a senha?</h3>
        </div>

        <div class="item">
            <div class="input-title">E-mail</div>
            <div class="input-content">
                <input 
                    type="text" 
                    name="email"
                    placeholder="Digite seu e-mail para recuperar sua senha"
                >
            </div>
        </div>

        <div class="forgot-footer">
            <button type="submit">Recuperar</button>
        </div>

    </form>
</main>
{% endblock %}