{% extends "admin/layout-adm.njk" %}

{% block head %}
    <title>Foodfy - Painel de Controle</title>
{% endblock %}

{% block content %}

<main>
    <div class="container-admpanel">
        <div class="link-admpanel">
            <h2>Gerenciar receitas</h2>
            <a href="/admin/recipes/create">Criar receita</a>
        </div>
        <div class="cards-adm">
            {% for recipe in recipes %}
                <div class="card-adm" id="{{recipe}}">
                    <img src="{{recipe.photo}}" alt="{{recipe.title}}" class="cover">
                    <div class="cards-panel-texts">
                        <p class="nome-receita">{{recipe.title}}</p>
                        <p class="feito-por">por {{recipe.chef_name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}/recipes-admpanel">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</main>

{% endblock %}