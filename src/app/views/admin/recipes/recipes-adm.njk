{% extends "admin/layout-adm.njk" %}

{% block head %}
    <title>Detalhes da Receita {{recipe.title}}</title>
{% endblock %}

{% block content %}
<main>
    <div class="edit-panel">
        <h2>Receita: {{recipe.title}}</h2>
        <a href="/admin/recipes/{{recipe.id}}/edit">Editar receita</a>
    </div>
    <div class="recipe-container">
        <img src="{{recipe.image}}" alt="{{recipe.title}}">
        <h1>{{recipe.title}}</h1>
        <p class="recipe-author">por {{recipe.chef_name}}</p>
        <h2>Ingredientes <a class="showi active">MOSTRAR</a> <a class="hidei">ESCONDER</a></h2>
        <div class="ingredients">
            <ul>
                {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
        <h2>Modo de preparo <a class="showp active">MOSTRAR</a> <a class="hidep">ESCONDER</a></h2>
        <div class="preparation">
            <ul>
                {% for direction in recipe.preparation %}
                <li>{{direction}}</li>
                {% endfor %}
            </ul>
        </div>
        <h2>Informações Adicionais <a class="showf active">MOSTRAR</a> <a class="hidef">ESCONDER</a></h2>
        <p class="information">{{recipe.information}}</p>
    </div>
    <script src="/script2.js"></script>
</main>
{% endblock %}