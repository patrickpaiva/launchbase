{% extends "session/layout.njk" %}

{% block head %}
    <title>Foodfy - Nova senha</title>
    <link rel="stylesheet" href="/userStyle.css">
{% endblock %}

{% block content %}
<main>
    <form action="/users/password-reset" class="card-form login forgot-password" method="POST">
        <div class="login-title">
            <h3>Nova Senha</h3>
        </div>

        <div class="item">
            <div class="input-title">E-mail</div>
            <div class="input-content">
                <input 
                    type="text" 
                    name="email"
                    placeholder="Digite seu e-mail"
                    value="{{user.email}}"
                >
            </div>
        </div>

        <div class="item">
            <div class="input-title">Senha</div>
            <div class="input-content">
                <input 
                    type="password" 
                    name="password"
                    placeholder="Digite sua nova senha"
                >
            </div>
        </div>

        <div class="item">
            <div class="input-title">Repetir senha</div>
            <div class="input-content">
                <input 
                    type="password" 
                    name="password_confirmation"
                    placeholder="Repita sua nova senha"
                >
            </div>
        </div>

        <input type="hidden" name="token" value="{{token}}">

        <div class="forgot-footer">
            <button type="submit">Nova Senha</button>
        </div>

    </form>
</main>
{% endblock %}