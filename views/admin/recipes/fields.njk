    <script src="/script5.js"></script>
</div>

<div class="item">
    <div class="input-title">Informações adicionais</div>
    <div class="input-content">
        <input 
            type="text" 
            name="information"
            value="{{recipe.information}}"
        >
    </div>
</div>

<input type="hidden" name="id" value="{{recipe.id}}">

